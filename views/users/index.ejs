<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <div>
                        <span class="card-title">
                        <% if(user) { %>
                            <% if(user.avatar) { %>
                                <img width="50" class="circle responsive-img" src="<%= user.avatar %>">
                            <% } else { %>
                                <i class="small material-icons">perm_identity></i>
                            <% } %>
                            <span class="user-name"><%= user.name %></span>
                        <% } %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>